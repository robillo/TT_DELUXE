<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings_screen.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryIntensity3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/round_chevron_left_black_48"
            android:tint="@color/colorWhiteShade"
            tools:ignore="ContentDescription"
            android:padding="10sp"
            android:id="@+id/go_back"/>

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="?android:attr/actionBarSize"
            android:textColor="@color/colorWhiteShade"
            android:id="@+id/app_name_text_view"
            android:text="@string/settings"
            android:textSize="25sp"
            android:gravity="center"
            fontPath="fonts/Comfortaa-Bold.ttf"
            tools:ignore="MissingPrefix"/>

        <ImageView
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ImageView android:layout_width="match_parent"
        android:background="@color/colorPrimaryIntensityDark3"
        android:layout_height="2sp"
        tools:ignore="ContentDescription,SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:gravity="center"
        android:background="@color/colorWhiteShade"
        android:text="@string/about_the_app_and_developers"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorIntensity8"
        tools:ignore="ContentDescription,SmallSp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:gravity="center"
        android:background="@color/colorWhiteShade"
        android:text="@string/select_app_theme_color"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/row_theme_color"
        android:background="@color/colorWhiteShade"
        android:paddingBottom="10sp"
        android:id="@+id/recycler_theme_colors">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorIntensity8"
        tools:ignore="ContentDescription,SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:gravity="center"
        android:background="@color/colorWhiteShade"
        android:text="@string/click_to_enable_daily_notifications"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorIntensity8"
        tools:ignore="ContentDescription,SmallSp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/colorIntensity8"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorIntensity8"
        tools:ignore="ContentDescription,SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appreciate_developers_efforts"
        android:background="@color/colorWhiteShade"
        android:padding="10sp"
        android:gravity="center"
        android:textSize="16sp"/>

    <ImageView android:layout_width="match_parent"
        android:background="@color/colorRateAppDark"
        android:layout_height="1sp"
        tools:ignore="ContentDescription,SmallSp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorRateApp"
        android:textColor="@color/colorBlackShade"
        android:text="@string/rate_app_5_stars"
        android:paddingBottom="6sp"
        android:gravity="center"
        android:textSize="20sp"/>

</LinearLayout>