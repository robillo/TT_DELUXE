<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.firstapp.robinpc.tongue_twisters_deluxe.view.DetailActivity"
        tools:showIn="@layout/activity_detail"
        android:orientation="vertical"
        android:layout_marginTop="?actionBarSize"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/gestureLayout"
            android:background="@color/colorPrimaryLightLight"
            android:elevation="3sp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                app:cardElevation="8sp"
                android:id="@+id/cardView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LEVEL 1 TT 1"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:id="@+id/header1"
                            android:gravity="center" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Denise and Fleece"
                            android:textSize="22sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:id="@+id/header2"
                            android:gravity="center"
                            android:layout_below="@+id/header1"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/previous"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:background="?attr/selectableItemBackground"
                            android:id="@+id/prev"
                            android:onClick="onClick"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/next"
                            android:textSize="25sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:background="?attr/selectableItemBackground"
                            android:id="@+id/next"
                            android:onClick="onClick"/>
                    </RelativeLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:id="@+id/mainText"
                            android:fontFamily="sans-serif-smallcaps"/>
                    </ScrollView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:id="@+id/recyclerView"
            android:layout_weight="1"/>

    </LinearLayout>

