<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".new_app.level_screen.LevelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:textColor="@color/colorWhiteShade"
        android:background="@color/colorPrimaryIntensity7"
        android:paddingTop="10sp"
        android:id="@+id/level_number_header_text_view"
        android:text="@string/level_number_header_dummy_example"
        android:textSize="20sp"
        android:gravity="center"
        fontPath="fonts/Comfortaa-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhiteShade"
        android:text="@string/level_name_dummy_example"
        android:background="@color/colorPrimaryIntensity7"
        android:id="@+id/level_name_text_view"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="5sp"
        android:paddingBottom="10sp"
        fontPath="fonts/Comfortaa-Light.ttf"
        tools:ignore="MissingPrefix"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccentIntensity4"
                android:layout_marginTop="20sp"
                android:id="@+id/twister_number_text_view"
                android:text="@string/twister_number_dummy_example"
                android:textSize="20sp"
                android:gravity="center"
                fontPath="fonts/Comfortaa-Bold.ttf"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccentIntensity4"
                android:layout_marginBottom="5sp"
                android:id="@+id/twister_name_text_view"
                android:text="@string/twister_name_dummy_example"
                android:textSize="25sp"
                android:gravity="center"
                fontPath="fonts/Comfortaa-Bold.ttf"
                tools:ignore="MissingPrefix"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>