<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".level_screen.LevelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:textColor="@color/colorPrimaryIntensity3"
        android:background="@color/colorWhiteShade"
        android:paddingTop="10sp"
        android:id="@+id/level_number_header_text_view"
        android:text="@string/level_number_header_dummy_example"
        android:textSize="25sp"
        android:gravity="center"
        fontPath="fonts/blacklite.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryIntensity3"
        android:text="@string/level_name_dummy_example"
        android:background="@color/colorWhiteShade"
        android:id="@+id/level_name_text_view"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="5sp"
        android:paddingBottom="15sp"
        fontPath="fonts/Comfortaa-Light.ttf"
        tools:ignore="MissingPrefix"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorPrimaryIntensity9"
        tools:ignore="ContentDescription,SmallSp"
        android:id="@+id/line_light"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:background="@color/colorWhiteShade"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryIntensity4"
            android:id="@+id/color_linear_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhiteShade"
                android:layout_marginTop="10sp"
                android:id="@+id/twister_number_text_view"
                android:text="@string/twister_number_dummy_example"
                android:textSize="30sp"
                android:gravity="center"
                fontPath="fonts/brighter.ttf"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhiteShade"
                android:paddingBottom="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:id="@+id/twister_name_text_view"
                android:text="@string/twister_name_dummy_example"
                android:textSize="26sp"
                android:gravity="center"
                fontPath="fonts/blacklite.ttf"
                tools:ignore="MissingPrefix"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/twister_scroll_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="120sp"
                android:paddingBottom="130sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhiteShade"
                    android:textColor="@color/colorAccentIntensity5"
                    android:text="@string/twister_dummy_example"
                    android:id="@+id/twister_text_view"
                    android:lineSpacingExtra="10.0sp"
                    fontPath="fonts/Comfortaa-Bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="30sp"
                    android:paddingTop="15sp"
                    android:paddingLeft="15sp"
                    android:paddingRight="15sp"
                    android:paddingBottom="?attr/actionBarSize"
                    android:gravity="center_horizontal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:alpha="0.7"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/share_with_friends"
                    tools:ignore="ContentDescription"
                    android:id="@+id/share_with_friends_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5sp"
                    android:textColor="@color/colorIntensity8"
                    android:text="@string/share_with_friends"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/share_with_friends_text"/>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteShade"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:adSize="SMART_BANNER"
            app:adUnitId="@string/banner_ad_unit_id">

        </com.google.android.gms.ads.AdView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:id="@+id/line_bottom"
            tools:ignore="ContentDescription,SmallSp"
            tools:background="@color/colorPrimaryCheerfulBlue"/>

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:spb_sections_count="4"
            app:spb_colors="@array/gplus_colors"
            app:spb_speed="2.0"
            app:spb_stroke_width="4sp"
            app:spb_stroke_separator_length="10sp"
            app:spb_reversed="true"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            android:id="@+id/smooth_progress_bar"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/colorAccentIntensityOpaque2"
                    android:id="@+id/previous_twister_button_card"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:tint="@color/colorWhiteShade"
                        android:padding="5sp"
                        android:src="@drawable/round_chevron_left_black_48"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5sp"
                    android:textColor="@color/colorAccentIntensity5"
                    android:text="@string/previous_twister"
                    android:id="@+id/previous_hint_text_view"
                    android:layout_marginLeft="7sp"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="MissingPrefix,RtlHardcoded"
                    fontPath="fonts/Comfortaa-Light.ttf"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|bottom">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:paddingRight="10sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry"
                        android:id="@+id/auto_play_button">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:padding="5sp"
                            android:tint="@color/colorPrimaryIntensity7"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_loop_black_48"
                            tools:ignore="ContentDescription"
                            android:id="@+id/auto_play_image_view"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12sp"
                            android:textColor="@color/colorPrimaryIntensity5"
                            android:text="@string/auto_play_on"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            tools:ignore="MissingPrefix,RtlHardcoded"
                            fontPath="fonts/Comfortaa-Light.ttf"
                            android:id="@+id/auto_play_text_view"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:paddingLeft="10sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry"
                        android:id="@+id/play_button">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:padding="5sp"
                            android:tint="@color/colorPrimaryIntensity4"
                            android:layout_gravity="center"
                            android:src="@drawable/round_volume_up_black_48"
                            tools:ignore="ContentDescription"
                            android:id="@+id/play_image"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12sp"
                            android:textColor="@color/colorPrimaryIntensity5"
                            android:text="PLAY"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            tools:ignore="MissingPrefix,RtlHardcoded"
                            fontPath="fonts/Comfortaa-Light.ttf"
                            android:id="@+id/play_hint"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/colorAccentIntensityOpaque2"
                    android:id="@+id/next_twister_button_card"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:tint="@color/colorWhiteShade"
                        android:padding="5sp"
                        android:src="@drawable/round_chevron_right_black_48"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5sp"
                    android:textColor="@color/colorAccentIntensity5"
                    android:text="@string/next_twister"
                    android:id="@+id/next_hint_text_view"
                    android:layout_marginRight="7sp"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="MissingPrefix,RtlHardcoded"
                    fontPath="fonts/Comfortaa-Light.ttf"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>