<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".about_screen.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryIntensity3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/round_chevron_left_black_48"
            android:tint="@color/colorWhiteShade"
            tools:ignore="ContentDescription"
            android:padding="10sp"
            android:id="@+id/go_back"/>

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="?android:attr/actionBarSize"
            android:textColor="@color/colorWhiteShade"
            android:id="@+id/app_name_text_view"
            android:text="@string/about"
            android:textSize="25sp"
            android:gravity="center"
            fontPath="fonts/Comfortaa-Bold.ttf"
            tools:ignore="MissingPrefix"/>

        <ImageView
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ImageView android:layout_width="match_parent"
        android:background="@color/colorPrimaryIntensityDark3"
        android:layout_height="2sp"
        tools:ignore="ContentDescription,SmallSp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/colorIntensity10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:gravity="center"
                android:textSize="14sp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardElevation="3sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110sp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <android.support.v7.widget.CardView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        app:cardCornerRadius="45sp"
                        android:layout_margin="10sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription"
                            android:id="@+id/robin_image"/>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:text="@string/robin_kamboj"
                        android:paddingLeft="10sp"
                        android:gravity="start|center_vertical"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_creators"
                android:layout_marginTop="15sp"
                android:padding="10sp"
                android:gravity="center"
                android:textSize="14sp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                app:cardElevation="3sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110sp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <android.support.v7.widget.CardView
                            android:layout_width="90sp"
                            android:layout_height="90sp"
                            app:cardCornerRadius="45sp"
                            android:layout_margin="10sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="ContentDescription"
                                android:id="@+id/amit_image"/>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/amit_singh"
                            android:paddingLeft="10sp"
                            android:gravity="start|center_vertical"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/colorIntensity8"
                        tools:ignore="ContentDescription,SmallSp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110sp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="@string/anubhav_nirwal"
                            android:paddingRight="10sp"
                            android:gravity="end|center_vertical"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                        <android.support.v7.widget.CardView
                            android:layout_width="90sp"
                            android:layout_height="90sp"
                            app:cardCornerRadius="45sp"
                            android:layout_margin="10sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="ContentDescription"
                                android:id="@+id/anubhav_image"/>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>